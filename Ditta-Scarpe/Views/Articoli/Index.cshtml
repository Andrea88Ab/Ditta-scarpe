@model IEnumerable<Ditta_Scarpe.Models.Articolo> // Specifica il tipo del modello

@{
    ViewBag.Title = "Elenco Articoli";
}

<div class="container mt-4">
    <h2 class="mb-3">Vetrina</h2>
    <div class="row">
        @foreach (var articolo in Model) // Itera sugli articoli
        {
            <div class="col-md-4">
                <div class="card">
                    <img src="@articolo.ImmagineCopertina" class="card-img-top" alt="Immagine di @articolo.Nome">
                    <div class="card-body">
                        <h5 class="card-title">@articolo.Nome</h5>
                        <p class="card-text">@articolo.Descrizione</p>
                        <p class="card-text">Prezzo: @articolo.Prezzo €</p>
                        <a href="@Url.Action("Dettagli", "Articoli", new { id = articolo.Id })" class="btn btn-primary">Dettagli</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
